---
import skills from "../data/skills.json";
---

<section class="text-white pb-36 flex flex-col gap-14">
  <div class="text-center">
    <p class="text-[24px]">
      I'm currently looking to join a <span class="text-font2">cross-functional</span> team
    </p>
    <p class="text-[17px]">
      that values improving people's lives through accessible design
    </p>
  </div>
  <div class="grid grid-cols-7 gap-5 mx-auto">
    {
      skills.map((skill) => (
        <div class="bg-bgimg rounded-full flex justify-center items-center w-[48px] h-[48px]"> <!-- Ajusta el padding -->
          <img src={skill.img} alt="Skill icon" /> <!-- Cambia el tamaño aquí -->
        </div>
      ))
    }
  </div>
</section>
